<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<main id="site-main">
    <div class="container">
                <!-- include header -->
                <%- include('include/_dashboardmenu') %>
                <!-- /include header -->
        <div class="form-title text-center">
            <h2 class="text-dark">Editar Administrador</h2>
        </div>
        <form action="/editarAdmin/<%= admin._id %>" method="POST" class="form">
            <div class="form-group">
                <label for="usuario" class="text-light">Usuario</label>
                <input type="text" id="usuario" name="usuario" required placeholder="Ingrese el nombre de usuario" class="form-control" value="<%= admin.usuario %>">
            </div>
            <div class="form-group">
                <label for="contrasena" class="text-light">Contraseña</label>
                <input type="password" id="contrasena" name="contrasena" required placeholder="Ingrese la contraseña" class="form-control" value="<%= admin.contrasena %>">
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            </div>
        </form>
    </div>
</main>

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
