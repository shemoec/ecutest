 <!-- form handling -->
<form action="/api/questions" method="POST" id="add_question">
    <div class="new_question">
        <div class="form-group">
            <label for="question" class="text-light">Question</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="question" value="" placeholder="What is the capital of France?">
        </div>
        <div class="form-group">
            <label for="answer1" class="text-light">Answer 1</label>
            <input type="text" name="answer1" value="" placeholder="Paris">
        </div>
        <div class="form-group">
            <label for="answer2" class="text-light">Answer 2</label>
            <input type="text" name="answer2" value="" placeholder="London">
        </div>
        <div class="form-group">
            <label for="answer3" class="text-light">Answer 3</label>
            <input type="text" name="answer3" value="" placeholder="New York">
        </div>
        <div class="form-group">
            <label for="answer4" class="text-light">Answer 4</label>
            <input type="text" name="answer4" value="" placeholder="Tokyo">
        </div>
        <div class="form-group">
            <label for="answer5" class="text-light">Answer 5</label>
            <input type="text" name="answer5" value="" placeholder="Beijing">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>
